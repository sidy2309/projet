{% extends 'base.html.twig' %}

{% block title %}PaymentRequest{% endblock %}

{% block body %}
    <h1>PaymentRequest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment_request.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ payment_request.createdAt ? payment_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PaidAt</th>
                <td>{{ payment_request.paidAt ? payment_request.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ payment_request.validated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StripeSessionId</th>
                <td>{{ payment_request.stripeSessionId }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('admin_payment_request_index') }}">back to list</a><br></br>

    <a class="btn btn-success" href="{{ path('admin_payment_request_edit', {'id': payment_request.id}) }}">edit</a><br></br>

    {{ include('admin_payment_request/_delete_form.html.twig') }}<br></br>
{% endblock %}
