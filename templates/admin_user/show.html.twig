{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('admin_user_index') }}">back to list</a><br></br>

    <a class="btn btn-success" href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a><br></br>

    {{ include('admin_user/_delete_form.html.twig') }}<br></br>
{% endblock %}
