{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ game.price }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ game.code }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('admin_game_index') }}">back to list</a><br></br>

    <a class="btn btn-success" href="{{ path('admin_game_edit', {'id': game.id}) }}">edit</a><br></br>

    {{ include('admin_game/_delete_form.html.twig') }}<br></br>
{% endblock %}
