    <body>


<nav class="navbar navbar-expand-lg navbar-light bg-dark">
  <a class="navbar-brand" href="{{path ("home") }}">YunoGame</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{path ("catalogue_index") }}">Catalogue <span class="sr-only">(current)</span></a>
      </li>
      {% if not is_granted('ROLE_USER') %}
      <li class="nav-item">
        <a class="nav-link" href="{{path ("app_login") }}">Connexion</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path ("app_register") }}">S'inscrire</a>
      </li>
      {% endif %}

      {% if is_granted('ROLE_USER') %}
      <li class="nav-item">
        <a class="nav-link" href="{{path ("app_logout") }}">Déconnexion</a>
      </li>
      {% endif %}
      
      <li class="nav-item">
        <a class="nav-link" href="{{path ("cart_index") }}">Panier</a>
      </li>
      {% if is_granted('ROLE_ADMIN') %}
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Admin
        </a>
       
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href= "{{path ("admin_game_index") }}">Gestion des jeux</a>
          <a class="dropdown-item" href="{{path ("admin_order_index") }}">Gestions des commandes</a>
          <a class="dropdown-item" href="{{path ("admin_category_index") }}">Gestion des catégories</a>
          <a class="dropdown-item" href="{{path ("admin_ordered_quantity_index") }}">Gestion des quantités</a>
          <a class="dropdown-item" href="{{path ("admin_payment_request_index") }}">Gestion des payments</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="{{path ("admin_user_index") }}">Gestion des utilisateurs</a>
        </div>
      </li>
      
      
    </ul>
    {% endif %}
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control light mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Recherche</button>
    </form>
  </div>
</nav>
















